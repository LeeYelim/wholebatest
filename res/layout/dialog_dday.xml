<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
      <LinearLayout
        android:id="@+id/ddayEditLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

       

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20sp"  />

            <EditText
                android:id="@+id/edit_dday_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint = "EX) 내 생일"
                android:textSize="20sp"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
 
            android:orientation="horizontal" >

           
 			<EditText
                    android:id="@+id/edit_dday_year"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" > 
                </EditText>
            
                <TextView
                    android:id="@+id/text_dday_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="년" 
                    android:textSize="20sp"  />

                    <EditText
                    android:id="@+id/edit_dday_month"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" > 
                </EditText>

                <TextView
                    android:id="@+id/text_dday_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월"
                    android:textSize="20sp" />
               
                <EditText
                    android:id="@+id/edit_dday_day"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" >
 
                </EditText>
            
                <TextView
                    android:id="@+id/text_dday_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일"
                    android:textSize="20sp" />
             
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" >

           
            <Button
                android:id="@+id/btn_dday_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제" />
 

            <Button
                android:id="@+id/btn_dday_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료" />
            
            <ToggleButton
                android:id="@+id/btn_dday_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="켜기"
                android:textOff="끄기" />
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>
